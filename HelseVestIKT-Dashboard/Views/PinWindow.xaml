<Window x:Class="HelseVestIKT_Dashboard.Views.PinWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="PIN" WindowStyle="ToolWindow"
  ResizeMode="NoResize"
  SizeToContent="WidthAndHeight">
	<StackPanel Margin="20">
		<TextBlock Text="Skriv inn PIN:" FontSize="16" />
		<PasswordBox x:Name="PinBox" Width="200" Margin="0,10"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Click="Ok_Click" Width="75" Height="50" Margin="0,0,5,0"/>
			<Button Content="Avbryt" Click="Cancel_Click" Width="75" Height="50"/>
		</StackPanel>
	</StackPanel>
</Window>

<Window
    x:Class="HelseVestIKT_Dashboard.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:HelseVestIKT_Dashboard.ViewModels"
    Title="Innstillinger"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">

	<StackPanel Margin="20" Width="300">
		<Button Content="Endre bruker"
            Command="{Binding ChangeUserCommand}"
            Height="50" Margin="0,0,0,10" />

		<Button Content="{Binding IsLocked, Converter={StaticResource BoolToLockTextConverter}}"
            Command="{Binding UnlockCommand}"
            Height="50" Margin="0,10,0,20" />

		<Button Content="Start PC på nytt"
            Command="{Binding RestartPCCommand}"
            Height="50" Margin="0,0,0,20" />

		<Separator Margin="0,10,0,10"/>

		<Button Content="Lukk"
            Command="{Binding CloseSettingsCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Height="50"
            HorizontalAlignment="Right" Width="100" />
	</StackPanel>
</Window>

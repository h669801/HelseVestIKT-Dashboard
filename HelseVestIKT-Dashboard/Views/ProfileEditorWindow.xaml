<Window x:Class="HelseVestIKT_Dashboard.Views.ProfileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ny Steam-profil"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Grid.IsSharedSizeScope="True">

	<Grid Margin="16">
		<!-- 6 rader: 3 input, hent-knapper, spacer, avbryt/lagre -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Profilnavn -->
			<RowDefinition Height="Auto"/>
			<!-- Steam API Key -->
			<RowDefinition Height="Auto"/>
			<!-- Steam User ID -->
			<RowDefinition Height="Auto"/>
			<!-- Hent-knapper -->
			<RowDefinition Height="20"/>
			<!-- Spacer -->
			<RowDefinition Height="Auto"/>
			<!-- Avbryt/Lagre -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<!-- 1) Auto + SharedSizeGroup for etiketter -->
			<ColumnDefinition Width="Auto" SharedSizeGroup="LabelCol"/>
			<!-- 2) Fast bredde for tekstbokser -->
			<ColumnDefinition Width="250"/>
		</Grid.ColumnDefinitions>

		<!-- Profilnavn -->
		<TextBlock Grid.Row="0" Grid.Column="0"
               Text="Profilnavn:"
               FontSize="16"
               VerticalAlignment="Center"
               Margin="0,0,8,8"/>
		<TextBox Grid.Row="0" Grid.Column="1"
         x:Name="NameBox"
         FontSize="16"
         Height="40"
         Margin="0,0,0,8"
         Padding="6,0"                   
			VerticalContentAlignment="Center"/>
			<!-- Steam API Key -->
		<TextBlock Grid.Row="1" Grid.Column="0"
               Text="Steam API Key:"
               FontSize="16"
               VerticalAlignment="Center"
               Margin="0,0,8,8"/>
		<TextBox Grid.Row="1" Grid.Column="1"
         x:Name="ApiKeyBox"
         FontSize="16"
         Height="40"
         Margin="0,0,0,8"
         Padding="6,0"
         VerticalContentAlignment="Center"/>

		<!-- Steam User ID -->
		<TextBlock Grid.Row="2" Grid.Column="0"
               Text="Steam User ID:"
               FontSize="16"
               VerticalAlignment="Center"
               Margin="0,0,8,8"/>
		<TextBox Grid.Row="2" Grid.Column="1"
         x:Name="UserIdBox"
         FontSize="16"
         Height="40"
         Margin="0,0,0,8"
         Padding="6,0"
         VerticalContentAlignment="Center"/>

		<!-- Hent-knapper -->
		<StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="0,0,0,8">
			<Button Content="Hent Steam-ID"
              Width="150" Height="50"
              FontSize="18"
              Margin="15,0,8,0"
              Click="OnFetchSteamId"/>
			<Button Content="Hent API-nøkkel"
              Width="150" Height="50"
              FontSize="18"
              Click="OnOpenSteamApiKeyPage"
					Margin="25,0,0,0"/>
		</StackPanel>

		<!-- Spacer-rad (Row 4) -->

		<!-- Avbryt / Lagre -->
		<StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
			<Button Content="Avbryt"
              Width="120" Height="50"
              FontSize="18"
              Margin="0,0,8,0"
              Click="OnCancel"/>
			<Button Content="Lagre"
              Width="120" Height="50"
              FontSize="18"
              Click="OnSave"/>
		</StackPanel>
	</Grid>
</Window>

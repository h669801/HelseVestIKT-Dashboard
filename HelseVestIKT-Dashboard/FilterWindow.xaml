<Window x:Class="WpfFilterDemo.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter" Height="500" Width="800" WindowStartupLocation="CenterOwner">
	<Window.Resources>
		<!-- Vannmerke-stil for TextBox (siden WPF ikke støtter PlaceholderText) -->
		<Style TargetType="TextBox" x:Key="WatermarkTextBox">
			<!-- Sett standard ramme- og bakgrunnsegenskaper -->
			<Setter Property="BorderBrush" Value="Gray"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Background" Value="White"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Background="{TemplateBinding Background}"
                SnapsToDevicePixels="True">
							<Grid>
								<ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
								<TextBlock x:Name="Watermark"
                       Text="{TemplateBinding Tag}"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       IsHitTestVisible="False"
                       Visibility="Collapsed"/>
							</Grid>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="Text" Value="">
								<Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
							</Trigger>
							<Trigger Property="Text" Value="{x:Null}">
								<Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="20">
			<!-- Definer rader og kolonner -->
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="14*"/>
				<RowDefinition Height="97*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
			</Grid.ColumnDefinitions>

			<!-- SPILLERE -->
			<StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,97" Grid.RowSpan="2">
				<TextBlock Text="Spiller" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxSinglePlayer" Content="Enspiller" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxMultiplayer" Content="Flerspill" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxCooperative" Content="Cooperative/Samarbeidspill" Margin="0,2,0,2"/>
			</StackPanel>

			<!-- SPILLTILSTAND -->
			<StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,10,97" Grid.RowSpan="2">
				<TextBlock Text="Spilltilstand" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxReadyToPlay" Content="Klar til å spille" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxInstalledLocally" Content="Innstallert lokalt" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxPlayed" Content="Spilt før" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxUnplayed" Content="Ikke spilt" Margin="0,2,0,2"/>
			</StackPanel>

			<!-- SJANGER -->
			<StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,97" Grid.RowSpan="2">
				<TextBlock Text="Sjanger" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxAction" Content="Action" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxAdventure" Content="Eventyr" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxVR" Content="VR" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxCasual" Content="Avslappet" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxIndie" Content="Indie" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxRPG" Content="Rollespill" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxSimulation" Content="Simulasjon" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxSports" Content="Sport" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxStrategy" Content="Strategi" Margin="0,2,0,2"/>

			</StackPanel>

			<!-- MASKINVARA STØTTE -->
			<StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,10,0">
				<TextBlock Text="Maskinvare støtte" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxControllerPreferred" Content="Delvis kontroll støtte" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxFullControllerSupport" Content="Full kontroll støtte" Margin="0,2,0,2"/>
				<TextBlock Text=" " Margin="0,5,0,5"/>
			</StackPanel>

			<!--	
			<StackPanel Grid.Row="1" Grid.Column="1" Margin="10,10">
				<TextBlock Text="Tillegg" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxTradingCards" Content="Trading cards" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxWorkshop" Content="Workshop" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxAchievements" Content="Achievements" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxRemotePlayTogether" Content="Remote Play Together" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxFamilySharing" Content="Family Sharing" Margin="0,2,0,2"/>
			</StackPanel>
			-->

			<!-- OK / Avbryt knapper -->
			<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Grid.Column="2">
				<Button Content="OK" Width="70" Margin="0,0,10,0" Click="OkButton_Click"/>
				<Button Content="Avbryt" Width="70" Click="CancelButton_Click"/>
			</StackPanel>
		</Grid>
	</ScrollViewer>
</Window>

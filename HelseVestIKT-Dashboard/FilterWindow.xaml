<Window x:Class="WpfFilterDemo.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter" Height="500" Width="800" WindowStartupLocation="CenterOwner">
	<Window.Resources>
		<!-- Watermark style for TextBox (since WPF doesn't support PlaceholderText) -->
		<Style TargetType="TextBox" x:Key="WatermarkTextBox">
			<!-- Set default border and background properties -->
			<Setter Property="BorderBrush" Value="Gray"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Background" Value="White"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Background="{TemplateBinding Background}"
                SnapsToDevicePixels="True">
							<Grid>
								<ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
								<TextBlock x:Name="Watermark"
                       Text="{TemplateBinding Tag}"
                       Foreground="Gray"
                       Margin="5,0,0,0"
                       IsHitTestVisible="False"
                       Visibility="Collapsed"/>
							</Grid>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="Text" Value="">
								<Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
							</Trigger>
							<Trigger Property="Text" Value="{x:Null}">
								<Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="20">
			<!-- Define rows and columns -->
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
			</Grid.ColumnDefinitions>

			<!-- PLAYERS -->
			<StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
				<TextBlock Text="PLAYERS" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxSinglePlayer" Content="Single Player" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxMultiplayer" Content="Multiplayer" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxCooperative" Content="Cooperative" Margin="0,2,0,2"/>
			</StackPanel>

			<!-- PLAY STATE -->
			<StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0">
				<TextBlock Text="PLAY STATE" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxReadyToPlay" Content="Ready to play" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxInstalledLocally" Content="Installed locally" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxPlayed" Content="Played" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxUnplayed" Content="Unplayed" Margin="0,2,0,2"/>
			</StackPanel>

			<!-- GENRE -->
			<StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,0">
				<TextBlock Text="GENRE" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxAction" Content="Action" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxAdventure" Content="Adventure" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxCasual" Content="Casual" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxIndie" Content="Indie" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxRPG" Content="RPG" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxSimulation" Content="Simulation" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxSports" Content="Sports" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxStrategy" Content="Strategy" Margin="0,2,0,2"/>
			</StackPanel>

			<!-- HARDWARE SUPPORT -->
			<StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,10,0">
				<TextBlock Text="HARDWARE SUPPORT" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxControllerPreferred" Content="Controller Preferred" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxFullControllerSupport" Content="Full Controller Support" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxVR" Content="VR" Margin="0,2,0,2"/>
				<TextBlock Text=" " Margin="0,5,0,5"/>
				<TextBlock Text="Gamepads:" FontStyle="Italic"/>
				<ComboBox x:Name="ComboBoxGamepads" Margin="0,2,0,2" Width="120">
					<ComboBoxItem Content="Any"/>
					<ComboBoxItem Content="Steam Deck"/>
					<ComboBoxItem Content="Xbox Controller"/>
					<ComboBoxItem Content="PS Controller"/>
				</ComboBox>
			</StackPanel>

			<!-- FEATURES -->
			<StackPanel Grid.Row="1" Grid.Column="1" Margin="10,10">
				<TextBlock Text="FEATURES" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<CheckBox x:Name="CheckBoxTradingCards" Content="Trading cards" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxWorkshop" Content="Workshop" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxAchievements" Content="Achievements" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxRemotePlayTogether" Content="Remote Play Together" Margin="0,2,0,2"/>
				<CheckBox x:Name="CheckBoxFamilySharing" Content="Family Sharing" Margin="0,2,0,2"/>
			</StackPanel>

			<!-- STORE TAGS / FRIENDS -->
			<StackPanel Grid.Row="1" Grid.Column="2" Margin="10,10,0,0">
				<TextBlock Text="STORE TAGS" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<TextBox x:Name="StoreTagsTextBox" Margin="0,2,0,10" 
         Style="{StaticResource WatermarkTextBox}" Tag="enter a tag"/>
				<TextBlock Text="FRIENDS" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
				<TextBox x:Name="FriendsTextBox" Margin="0,2,0,0"
         Style="{StaticResource WatermarkTextBox}" Tag="enter a friend's name"/>

			</StackPanel>

			<!-- OK / Cancel Buttons -->
			<StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
				<Button Content="OK" Width="70" Margin="0,0,10,0" Click="OkButton_Click"/>
				<Button Content="Cancel" Width="70" Click="CancelButton_Click"/>
			</StackPanel>
		</Grid>
	</ScrollViewer>
</Window>
